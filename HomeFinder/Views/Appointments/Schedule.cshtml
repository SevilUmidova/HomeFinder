@model HomeFinder.Models.AppointmentViewModel
@{
    ViewData["Title"] = "Book an Appointment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>📅 Book an Appointment</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Schedule" method="post">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="ApartmentId" />

                        <div class="mb-3">
                            <label class="form-label">Select Address</label>
                            <select asp-for="AddressId" class="form-control" required>
                                <option value="">-- Select an address --</option>
                                @foreach (var addr in Model.AvailableAddresses)
                                {
                                    <option value="@addr.AddressId">
                                        @addr.StreetAddress, @addr.BuildingNumber (@addr.City)
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Date and Time</label>
                            <input type="datetime-local" asp-for="DateTime" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">✅ Book Appointment</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary w-100 mt-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
